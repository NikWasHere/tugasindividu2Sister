# Node Configuration
NODE_ID=node-1
NODE_HOST=localhost
NODE_PORT=5000

# Cluster Configuration
CLUSTER_NODES=node-1:localhost:5000,node-2:localhost:5001,node-3:localhost:5002
HEARTBEAT_INTERVAL=1.0
ELECTION_TIMEOUT_MIN=5.0
ELECTION_TIMEOUT_MAX=10.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Queue Configuration
QUEUE_PARTITIONS=16
QUEUE_REPLICATION_FACTOR=2
MESSAGE_PERSISTENCE=true
DELIVERY_GUARANTEE=at-least-once

# Cache Configuration
CACHE_PROTOCOL=MESI
CACHE_SIZE_MB=256
CACHE_REPLACEMENT_POLICY=LRU
CACHE_INVALIDATION_TIMEOUT=60

# Consensus Configuration
CONSENSUS_ALGORITHM=raft
QUORUM_SIZE=2
LOG_COMPACTION_THRESHOLD=1000

# Performance Configuration
MAX_CONNECTIONS=1000
WORKER_THREADS=4
BUFFER_SIZE=8192

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Security
ENABLE_ENCRYPTION=false
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key

# Testing
TEST_MODE=false
SIMULATE_FAILURES=false
FAILURE_RATE=0.01
